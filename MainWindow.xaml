<Window x:Class="VisualMkLink.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualMkLink"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="LinkOpenButton" Content="Link" HorizontalAlignment="Left" Margin="335,134,0,0" VerticalAlignment="Top" Click="LinkOpenButton_Click"/>
        <TextBox x:Name="LinkText" HorizontalAlignment="Left" Margin="75,135,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="245"/>
        <Button x:Name="TargetOpenButton" Content="Target" HorizontalAlignment="Left" Margin="335,166,0,0" VerticalAlignment="Top" Click="TargetOpenButton_Click"/>
        <TextBox x:Name="TargetText" HorizontalAlignment="Left" Margin="75,167,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="245"/>

    </Grid>
</Window>
